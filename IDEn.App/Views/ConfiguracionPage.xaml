<Page x:Class="IDEn.App.Views.ConfiguracionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ctrl="clr-namespace:IDEn.App.Views.Controls"
      Title="Configuración"
      Background="#F7FAFC">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ctrl:Sidebar Grid.Column="0" Active="Configuracion"/>

        <ScrollViewer Grid.Column="1">
            <StackPanel Margin="28,24,28,28">
                <TextBlock Text="Configuración de la Aplicación" FontSize="28" FontWeight="Bold" Margin="0,0,0,12"/>

                <!-- Usuarios -->
                <TextBlock Text="Usuarios" FontWeight="Bold" Margin="0,12,0,8"/>
                <Border Background="White" CornerRadius="12" Padding="14" Margin="0,0,0,10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Gestión de Usuarios" FontWeight="SemiBold"/>
                            <TextBlock Text="Administrar los usuarios que tienen acceso a la aplicación." Foreground="#6B7280" FontSize="12"/>
                        </StackPanel>
                        <Button Content="Abrir" HorizontalAlignment="Right" Width="90"/>
                    </DockPanel>
                </Border>

                <!-- Unidades -->
                <TextBlock Text="Unidades de Medida" FontWeight="Bold" Margin="0,12,0,8"/>
                <Border Background="White" CornerRadius="12" Padding="14" Margin="0,0,0,10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Unidades de Medida" FontWeight="SemiBold"/>
                            <TextBlock Text="Configurar las unidades de medida usadas por IDEn." Foreground="#6B7280" FontSize="12"/>
                        </StackPanel>
                        <Button Content="Abrir" Width="90"/>
                    </DockPanel>
                </Border>

                <!-- Umbrales -->
                <TextBlock Text="Umbrales de Alerta" FontWeight="Bold" Margin="0,12,0,8"/>
                <Border Background="White" CornerRadius="12" Padding="14" Margin="0,0,0,10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Umbrales de Alerta" FontWeight="SemiBold"/>
                            <TextBlock Text="Establecer límites para disparar alertas." Foreground="#6B7280" FontSize="12"/>
                        </StackPanel>
                        <Button Content="Abrir" Width="90"/>
                    </DockPanel>
                </Border>

                <!-- Personalización -->
                <TextBlock Text="Personalización" FontWeight="Bold" Margin="0,12,0,8"/>
                <Border Background="White" CornerRadius="12" Padding="14" Margin="0,0,0,10" BorderBrush="#E5E7EB" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Personalización de la Aplicación" FontWeight="SemiBold"/>
                            <TextBlock Text="Apariencia y comportamiento." Foreground="#6B7280" FontSize="12"/>
                        </StackPanel>
                        <Button Content="Abrir" Width="90"/>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
