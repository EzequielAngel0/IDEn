<Page x:Class="IDEn.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ctrl="clr-namespace:IDEn.App.Views.Controls"
      Title="Inicio"
      Background="#F7FAFC">

    <Page.Resources>
        <SolidColorBrush x:Key="BgMain"    Color="#F7FAFC"/>
        <SolidColorBrush x:Key="TextMain"  Color="#0D141C"/>
        <SolidColorBrush x:Key="TextMuted" Color="#4D7399"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#EEF2F7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="Background" Value="#E8EDF2"/>
            <Setter Property="BorderBrush" Value="#E8EDF2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgMain}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sidebar reutilizable -->
        <ctrl:Sidebar Grid.RowSpan="2" Grid.Column="0" Active="Inicio"/>

        <!-- Header -->
        <Border Grid.Column="1" Grid.Row="0" Background="{StaticResource BgMain}">
            <DockPanel Margin="24,0,24,0" VerticalAlignment="Center">
                <TextBlock Text="Indicadores de Desempeño Energético (IDEn)"
                           FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource TextMain}" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Año:" Margin="0,0,8,0" Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                    <ComboBox Width="100" ItemsSource="{Binding AvailableYears}" SelectedItem="{Binding SelectedYear}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="28,16,28,28">
                <ItemsControl ItemsSource="{Binding Cards}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource Card}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="320"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextMain}"/>
                                        <TextBlock Margin="0,4,0,10" Foreground="{StaticResource TextMuted}">
                                            <Run Text="Valor actual: "/>
                                            <Run Text="{Binding Value, StringFormat={}{0:N4}}"/>
                                            <Run Text=" "/>
                                            <Run Text="{Binding Unit}"/>
                                        </TextBlock>
                                        <Button Content="Ver detalles" Style="{StaticResource FlatButton}"
                                                Tag="{Binding Key}" Click="VerDetalles_Click"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" CornerRadius="12" Background="#E8EDF2"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
