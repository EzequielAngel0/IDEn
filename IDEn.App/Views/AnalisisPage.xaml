<Page x:Class="IDEn.App.Views.AnalisisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Análisis">

    <Page.Resources>
        <SolidColorBrush x:Key="Bg"     Color="#F4F6F8"/>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Text1"  Color="#111827"/>
        <SolidColorBrush x:Key="Text2"  Color="#6B7280"/>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Pill" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Background" Value="#E5FBEA"/>
            <Setter Property="BorderBrush" Value="#8CE0A8"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource Bg}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar simple (navegación manual) -->
        <Border Background="#EEF2F7" Grid.Column="0">
            <StackPanel Margin="16">
                <TextBlock Text="IDEn" FontSize="20" FontWeight="Bold" Margin="4,8,0,16"/>
                <Button Content="Inicio" Margin="0,0,0,8" Click="GoInicio"/>
                <Button Content="Análisis" Margin="0,0,0,8"/>
                <Button Content="Datos" Margin="0,0,0,8" Click="GoDatos"/>
                <Button Content="Reportes" Margin="0,0,0,8" Click="GoReportes"/>
                <Button Content="Configuración" Margin="0,0,0,8" Click="GoConfig"/>
            </StackPanel>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="28,24,28,28">
                <TextBlock Text="Análisis del IDEn" FontSize="28" FontWeight="Bold" Foreground="{StaticResource Text1}"/>

                <Border Style="{StaticResource Card}" Margin="0,16,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezado -->
                        <DockPanel Grid.Row="0">
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{StaticResource Text1}" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                <TextBlock Text="Año:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource Text2}"/>
                                <ComboBox Width="100" ItemsSource="{Binding AvailableYears}" SelectedItem="{Binding SelectedYear}"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- KPI -->
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,6,0,12">
                            <TextBlock Text="{Binding CurrentValue, StringFormat={}{0:N2}}" FontSize="30" FontWeight="Bold" Foreground="{StaticResource Text1}"/>
                            <StackPanel Margin="12,10,0,0">
                                <TextBlock Text="{Binding SelectedYear}" Foreground="{StaticResource Text2}"/>
                                <Border Style="{StaticResource Pill}" HorizontalAlignment="Left" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding GrowthPct, StringFormat={}{0:+0.##%;-0.##%;0%}}" Margin="4,0"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Gráfico lineal simple -->
                        <Grid Grid.Row="2">
                            <Border Background="#FAFAFA" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Padding="8">
                                <Grid>
                                    <Canvas Width="{Binding ChartWidth}" Height="{Binding ChartHeight}">
                                        <Polyline Points="{Binding ChartPoints}" Stroke="#2B6CB0" StrokeThickness="2" Fill="Transparent"/>
                                    </Canvas>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Eje X (meses) -->
                        <UniformGrid Grid.Row="3" Columns="12" Margin="0,8,0,0">
                            <TextBlock Text="{Binding Months[0]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[1]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[2]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[3]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[4]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[5]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[6]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[7]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[8]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[9]}"  HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[10]}" HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                            <TextBlock Text="{Binding Months[11]}" HorizontalAlignment="Center" Foreground="{StaticResource Text2}"/>
                        </UniformGrid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
